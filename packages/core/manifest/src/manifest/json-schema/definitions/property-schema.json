{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://manifest.build/schemas/definitions/property-schema.json",
  "title": "Property Manifest Schema",
  "description": "A property in your entity. Doc: https://docs.case.app/properties",
  "anyOf": [
    {
      "type": "object",
      "properties": {
        "name": {
          "description": "The name of the property. Doc: https://docs.case.app/properties",
          "type": "string"
        },
        "type": {
          "description": "The type of the property: text, number, link, currency... Default \"string\". Doc: https://docs.case.app/property-types",
          "type": "string",
          "enum": [
            "string",
            "text",
            "number",
            "link",
            "money",
            "date",
            "email",
            "boolean",
            "relation",
            "password",
            "choice",
            "location"
          ]
        },
        "hidden": {
          "description": "If the property should be hidden in the API response. Default false. Doc: https://docs.case.app/property-types?id=hidden",
          "type": "boolean"
        },
        "options": {
          "allOf": [
            {
              "$ref": "./property-options-schema.json"
            }
          ],
          "oneOf": [
            {
              "if": {
                "type": "object",
                "properties": { "type": { "const": "money" } }
              },
              "then": {
                "$ref": "./property-options/money-options-schema.json"
              }
            },
            {
              "if": {
                "type": "object",
                "properties": { "type": { "const": "choice" } }
              },
              "then": {
                "$ref": "./property-options/choice-options-schema.json"
              }
            }
          ]
        }
      },
      "required": ["name"],
      "additionalProperties": false
    },
    {
      "type": "string",
      "description": "A simple string representing the type of the property."
    }
  ]
}
